/* pages/welcome/welcome.wxss */
page{
  height: 100%;
  background-color: #b3d5db;
}
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.user-avatar{
    width:200rpx;
    height:200rpx;
    border-radius: 50%;
    margin-top:160rpx;
}
.user-name{
    margin-top:100rpx;
    font-size:33rpx;  
    font-weight: bold;

}
.moto-container{
    margin-top:200rpx;
    width:200rpx;
    height:80rpx;
    border:1px solid #405f80;
    border-radius: 5px;
    text-align: center;
}
.moto{
    font-size:22rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #405f80;
}