.post-container{
    display: flex;
    flex-direction: column;
    margin:20rpx auto 40rpx;
    background-color: #fff;
    border-top:1px solid #ededed;
    border-bottom:1px solid #ededed;
    padding-bottom:5px;
}
.post-author-date{
    margin:10rpx 0 20rpx 10rpx;
}
.post-author{
    width:60rpx;
    height:60rpx;
    vertical-align: middle;
}
.post-date{
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom:5rpx;
    font-size:26rpx;
}
.post-title{
    display: block;
    font-size: 34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom:10px;
    margin-left:10px;
}
.post-image{
    width:100%;
    height:340rpx;
    margin-left: 16rpx;
    margin:auto 0;
    margin-bottom:15px;
}
.post-content{
    color:#666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left:20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}
.post-like{
    font-size: 13px;
    flex-direction: row;
    line-height:16px;
    margin-left:10px;
}
.post-like-image{
    width:16px;
    height:16px;
    margin-right:8px;
    vertical-align: middle;
}
.post-like-font{
    vertical-align: middle;
    margin-right:20px;
}